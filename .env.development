# Development Environment Configuration
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_APP_NAME=Digital Library (Dev)
VITE_APP_VERSION=1.0.0-dev

# Database Configuration (for server)
MONGODB_URI=mongodb://localhost:27017/digital_library_dev
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Security (relaxed for development)
BCRYPT_ROUNDS=8
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/development.log

# Performance
CACHE_TTL=300
MAX_FILE_SIZE=10485760

# Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=false

# Development Tools
ENABLE_CORS_ALL=true
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_DATA=true

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090